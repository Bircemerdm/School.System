@page
@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.AspNetCore.Mvc.TagHelpers
@using School.System.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Form
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Form.DatePicker
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@model School.System.Web.Pages.Roles.Students.CreateModalModel
@inject IHtmlLocalizer<SystemResource> L
@{
    Layout = null;
}

<form data-ajaxForm="true" asp-page="/Roles/Students/CreateModal" autocomplete="off">
    <abp-modal id="StudentCreateModal">
        <abp-modal-header title="@L["NewStudent"].Value"></abp-modal-header>
        <abp-modal-body>
            <abp-input asp-for="Student.StudentName" label="@L["StudentName"].Value" />
            <abp-input asp-for="Student.StudentSurname" label="@L["StudentSurname"].Value" />
            <abp-date-picker asp-for="Student.StudentBirthday" label="@L["StudentBirthday"].Value"/>
            
            <abp-input asp-for="Student.StudentIdentificationNumber" label="@L["StudentIdentificationNumber"].Value"/>
            <abp-select asp-for="Student.Class"/>
            <abp-input asp-for="Student.Brach"/>
            <abp-input asp-for="Student.StudentPhone" label="@L["StudentPhone"].Value"/>
            <abp-input asp-for="Student.SchoolFee" label="@L["SchoolFee"].Value"/>
            
        </abp-modal-body>
        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)">
        </abp-modal-footer>
    </abp-modal>
</form>
