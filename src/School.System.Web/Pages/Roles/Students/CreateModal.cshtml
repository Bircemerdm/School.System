@page
@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.AspNetCore.Mvc.TagHelpers
@using School.System.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Form
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Form.DatePicker
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@model School.System.Web.Pages.Roles.Students.CreateModalModel
@inject IHtmlLocalizer<SystemResource> L
@{
    Layout = null;
}

<form data-ajaxForm="true" asp-page="/Roles/Students/CreateModal" autocomplete="off">
    <abp-modal id="StudentCreateModal">
        <abp-modal-header title="@L["NewStudent"].Value"></abp-modal-header>
        <abp-modal-body>
            <abp-input asp-for="Student.StudentName" />
            <abp-input asp-for="Student.StudentSurname" />
            <abp-date-picker asp-for="Student.StudentBirthday" />
            <abp-input asp-for="Student.GuardianId" />
            <abp-input asp-for="Student.StudentIdentificationNumber" />
            <abp-select asp-for="Student.Class"/>
            <abp-input asp-for="Student.Brach"/>
            <abp-input asp-for="Student.StudentPhone"/>
            <abp-input asp-for="Student.SchoolFee"/>
            
        </abp-modal-body>
        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)">
        </abp-modal-footer>
    </abp-modal>
</form>
