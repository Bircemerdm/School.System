@page
@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.AspNetCore.Mvc.TagHelpers
@using School.System.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Form
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Form.DatePicker
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@model School.System.Web.Pages.Roles.Teachers.CreateModalModel

@inject IHtmlLocalizer<SystemResource> L
@{
    Layout = null;
}

<form data-ajaxForm="true" asp-page="/Roles/Teachers/CreateModal" autocomplete="off">
    <abp-modal id="TeacherCreateModal">
        <abp-modal-header title="@L["NewTeacher"].Value"></abp-modal-header>
        <abp-modal-body>
            <abp-input asp-for="Teacher.TeacherIdentificationNumber" />
            <abp-input asp-for="Teacher.TeacherName"/>
            <abp-input asp-for="Teacher.TeacherSurname"/>
            <abp-date-picker asp-for="Teacher.TeacherBirthday"/>
            <abp-input asp-for="Teacher.TeacherPhone"/>
            <abp-select asp-for="Teacher.Type"/>
            <abp-input asp-for="Teacher.Salary"/>

        </abp-modal-body>
        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)">
        </abp-modal-footer>
    </abp-modal>
</form>
